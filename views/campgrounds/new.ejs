<%- include("../partials/header.ejs") %>

<h1 class="text-center">Make A New Campground..</h1>

<div class="container text-center">
	<form class="new-form" action="/campgrounds" method="POST">
		<div class="form-group">
			<label for="n" class="pull-left">Place Name</label>    
			<input type="text" class="form-control" name="ground[name]" id="n" placeholder="Place name" required>
		</div>
		<div class="form-group">
			<label for="p" class="pull-left">Price</label>  
			<input type="number" class="form-control" name="ground[price]" id="p" placeholder="Price" min="0.01" step="0.01" required>
		</div>
		<div class="form-group">
			<label for="i" class="pull-left">Image url</label>
			<input type="text" class="form-control" name="ground[image]" id="i" placeholder="image url" required>
		</div>
		<div class="form-group">
			<label class="pull-left">Description</label>
			<textarea class="form-control" name="ground[description]" placeholder="The text goes here..."></textarea>  
		</div>
		<button class="btn-lg btn-info">Submit</button>
	</form>
</div>

