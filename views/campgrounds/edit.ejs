<%- include("../partials/header.ejs") %>

<h1 class="text-center">Edit <%= campground.name %></h1>

<div class="container text-center">
	<form class="new-form" action="/campgrounds/<%= campground._id %>?_method=put" method="post">
		<div class="form-group">
			<label for="n" class="pull-left">Place Name</label>    <!--pull is like float-->
			<input type="text" class="form-control" name="ground[name]" id="n" value="<%= campground.name %>" required>
		</div>
		<div class="form-group">
			<label for="p" class="pull-left">Price</label>  
			<input type="number" class="form-control" name="ground[price]" id="p" value="<%= campground.price %>" min="0.01" step="0.01" required>
		</div>
		<div class="form-group">
			<label for="i" class="pull-left">Image url</label>
			<input type="text" class="form-control" name="ground[image]" id="i" value="<%= campground.image %>" required>
		</div>
		<div class="form-group">
			<label class="pull-left">Description</label>
			<textarea class="form-control" name="ground[description]" ><%= campground.description %></textarea> 
		</div>
		<button class="btn-lg btn-primary">Update</button>
	</form>
</div>

<%- include("../partials/footer.ejs") %>